{
  "id": null,
  "uid": "jwt-exp",
  "title": "Experimento Seguridad JWT + RBAC",
  "tags": ["jwt", "security", "experiment"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "title": "JWT Validation Latency (p95, p99)",
      "type": "stat",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        { "expr": "histogram_quantile(0.95, rate(jwt_validation_seconds_bucket[5m]))", "legendFormat": "p95" },
        { "expr": "histogram_quantile(0.99, rate(jwt_validation_seconds_bucket[5m]))", "legendFormat": "p99" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": { "steps": [
            { "color": "green" },
            { "color": "yellow", "value": 0.5 },
            { "color": "red", "value": 1.0 }
          ] }
        }
      }
    },
    {
      "id": 2,
      "title": "JWT Validation Failures by Reason",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        { "expr": "sum by (reason) (rate(jwt_validation_failures_total[5m]))", "legendFormat": "{{reason}}" }
      ]
    },
    {
      "id": 3,
      "title": "JWT Validation Success Rate",
      "type": "stat",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        { "expr": "rate(jwt_validation_success_total[5m]) / (rate(jwt_validation_success_total[5m]) + rate(jwt_validation_failures_total[5m])) * 100", "legendFormat": "Success Rate %" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": { "steps": [
            { "color": "red" },
            { "color": "yellow", "value": 95 },
            { "color": "green", "value": 99 }
          ] }
        }
      }
    },
    {
      "id": 4,
      "title": "Redis Connection Status",
      "type": "stat",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        { "expr": "redis_connection_status", "legendFormat": "Redis Status" }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "Disconnected" } } },
            { "type": "value", "options": { "1": { "text": "Connected" } } }
          ],
          "thresholds": { "steps": [
            { "color": "red", "value": 0 },
            { "color": "green", "value": 1 }
          ] }
        }
      }
    },
    {
      "id": 5,
      "title": "JWT Validation Latency Over Time",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "targets": [
        { "expr": "histogram_quantile(0.50, rate(jwt_validation_seconds_bucket[5m]))", "legendFormat": "p50" },
        { "expr": "histogram_quantile(0.95, rate(jwt_validation_seconds_bucket[5m]))", "legendFormat": "p95" },
        { "expr": "histogram_quantile(0.99, rate(jwt_validation_seconds_bucket[5m]))", "legendFormat": "p99" }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "id": 6,
      "title": "Active Tokens",
      "type": "stat",
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 24 },
      "targets": [ { "expr": "active_tokens_total", "legendFormat": "Active Tokens" } ]
    },
    {
      "id": 7,
      "title": "Request Rate",
      "type": "stat",
      "gridPos": { "h": 4, "w": 8, "x": 8, "y": 24 },
      "targets": [ { "expr": "rate(jwt_validation_success_total[5m]) + rate(jwt_validation_failures_total[5m])", "legendFormat": "Requests/sec" } ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 8,
      "title": "Error Rate",
      "type": "stat",
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 24 },
      "targets": [
        { "expr": "rate(jwt_validation_failures_total[5m]) / (rate(jwt_validation_success_total[5m]) + rate(jwt_validation_failures_total[5m])) * 100", "legendFormat": "Error Rate %" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": { "steps": [
            { "color": "green" },
            { "color": "yellow", "value": 0.5 },
            { "color": "red", "value": 1.0 }
          ] }
        }
      }
    }
  ]
}
